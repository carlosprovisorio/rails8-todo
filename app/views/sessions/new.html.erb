<div class="row justify-content-center">
  <div class="col-md-5">
    <h1 class="h4 mb-3">Sign in</h1>

    <%= form_with url: sign_in_path, class: "vstack gap-3" do |f| %>
      <div>
        <%= label_tag :email, "Email", class: "form-label" %>
        <%= email_field_tag :email, params[:email], class: "form-control", autofocus: true %>
      </div>
      <div>
        <%= label_tag :password, "Password", class: "form-label" %>
        <%= password_field_tag :password, nil, class: "form-control" %>
      </div>
      <div class="form-check">
        <%= check_box_tag :remember_me, "1", false, class: "form-check-input", id: "remember_me" %>
        <%= label_tag :remember_me, "Remember me", class: "form-check-label" %>
      </div>

      <%= f.submit "Sign in", class: "btn btn-primary" %>
      <div class="small mt-2">
        <%= link_to "Forgot your password?", new_password_reset_path %>
      </div>
    <% end %>
  </div>
</div>
