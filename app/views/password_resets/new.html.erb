<div class="row justify-content-center">
  <div class="col-md-5">
    <h1 class="h4 mb-3">Forgot your password?</h1>
    <%= form_with url: password_resets_path,
              method: :post,
              data: { turbo: false },
              authenticity_token: true,
              class: "vstack gap-3" do |f| %>
      <div>
        <%= label_tag :email, "Email", class: "form-label" %>
        <%= email_field_tag :email, nil, class: "form-control", autofocus: true %>
      </div>
      <%= f.submit "Send reset link", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
