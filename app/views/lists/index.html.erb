<div class="d-flex align-items-center justify-content-between mb-3">
  <h1 class="h4 mb-0">Your Lists</h1>
  <%= form_with model: @list, url: lists_path, data: { turbo_frame: "lists" }, class: "d-flex gap-2" do |f| %>
    <%= f.text_field :name, placeholder: "New list name", class: "form-control" %>
    <%= f.color_field :color, class: "form-control form-control-color", value: "#4f6ef7" %>
    <%= f.submit "Add", class: "btn btn-primary" %>
  <% end %>
</div>

<%= turbo_frame_tag "lists" do %>
  <div class="row g-3" data-controller="sortable" data-sortable-url-value="<%= reorder_lists_path %>">
    <% @lists.each do |list| %>
      <div class="col-md-4" data-id="<%= list.id %>">
        <%= render "card", list: list %>
      </div>
    <% end %>
  </div>
<% end %>
